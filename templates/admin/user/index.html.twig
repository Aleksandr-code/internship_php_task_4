{% extends 'base.html.twig' %}

{% block title %}Admin panel{% endblock %}

{% block body %}
<style>
    .wrapper { margin: 1em auto; max-width: 1000px; width: 95%; font: 18px/1.5 sans-serif; }
    .wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .wrapper-text-tr {font-size: 14px;}
    .form-check-input {width: 1.3em; height: 1.3em;}
</style>

<div class="wrapper" data-controller="user">
    <h2 class="text-center my-4">Admin panel</h2>
    <div class="btn-toolbar justify-content-between mb-3 p-3 bg-light" role="toolbar">
        <div class="px-3" role="group">
            <form action="{{ path('app_admin_user_block_multiple')}}" method="POST" class="d-inline">
                <button type="button" class="btn btn-outline-primary mb-2" id="block-button">
                    <i class="bi bi-lock"></i>
                    block
                </button>
            </form>
            <form action="{{ path('app_admin_user_unlock_multiple')}}" method="POST" class="d-inline">
            <button type="button" class="btn btn-outline-primary mb-2" id="unlock-button">
                <i class="bi bi-unlock"></i>
                unlock
            </button>
            </form>
            <form action="{{ path('app_admin_user_delete_multiple')}}" method="POST" class="d-inline">
            <button type="button" class="btn btn-outline-danger mb-2" id="delete-button">
                <i class="bi bi-trash"></i>
                delete
            </button>
            </form>
            <form action="{{ path('app_admin_user_delete_unverified_multiple')}}" method="POST" class="d-inline">
            <button type="button" class="btn btn-outline-danger mb-2" id="delete-unverified-button">
                <i class="bi bi-eraser"></i>
                delete unverified
            </button>
            </form>
        </div>
        <div class="input-group mb-2">
            <input type="text" class="form-control" placeholder="Filter" aria-label="Input group example" id="filter-input">
        </div>
    </div>
    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
        <tr>
            <th class="text-center wrapper-text-tr">
                <input class="form-check-input" type="checkbox" value="" id="checkboxMulti" />
            </th>
            <th>Name</th>
            <th>Email</th>
            <th>Status</th>
            <th>Last seen</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
        <tr class="wrapper-text-tr user">
            <td>
                <p class="fw-normal mb-1 text-center">
                    <input class="form-check-input" type="checkbox" value="{{user.id}}" name="ids" />
                </p>
            </td>
            <td class="user-name">
                <div class="d-flex align-items-center">
                    <div>
                        <p class="fw-bold mb-1 ">{{ user.name }}</p>
                        <p class="text-muted mb-0">about me</p>
                    </div>
                </div>
            </td>
            <td class="user-email">
                <p class="fw-normal mb-1">{{user.email}}</p>
            </td>
            <td class="user-status">
                {% set statusClasses = {
                    'Active': 'bg-success',
                    'Unverified': 'bg-secondary',
                    'Blocked': 'bg-danger'
                } %}
                <span class="badge {{ statusClasses[user.getRolePublicVisible()]|default('bg-light') }} rounded-pill d-inline">{{ user.getRolePublicVisible() }}</span>
            </td>
            <td>{{ user_date_login[user.id] }}</td>
        </tr>
        {% else %}
            <tr>
                <td class="text-center" colspan="5">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
